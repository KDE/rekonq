        <Action name="useragent" />
        <Action name="sync" />
        <Action name="adblock" />
    </Menu>

    <Separator/>
    <Action name="bookmarksActionMenu" />

    <Action name="open_history_page" />
    <Action name="open_downloads_page" />
    
    <Menu name="panelsMenu" noMerge="1">
